<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="theme_base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:direction">right_to_left</item>
        <item name="android:textDirection" tools:targetApi="17">rtl</item>
        <item name="android:colorBackground">@color/bg</item>
        <item name="android:textColorPrimary">@drawable/text</item>
        <item name="android:textColorHighlight">@color/text_highlight</item>
        <item name="colorAccent">@color/control_accent</item>
        <item name="android:colorControlNormal" tools:targetApi="21">@color/control_normal</item>
        <item name="colorControlNormal">@color/control_normal</item>
        <item name="android:colorControlHighlight" tools:targetApi="21">@color/control_highlight
        </item>
        <item name="colorControlHighlight">@color/control_highlight</item>
        <item name="android:colorControlActivated" tools:targetApi="21">@color/control_activated
        </item>
        <item name="colorControlActivated">@color/control_activated</item>
        <item name="android:windowBackground">@color/window_bg</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/navigation_bar_bg</item>
        <item name="android:statusBarColor" tools:targetApi="21">@color/status_bar_bg</item>
        <item name="android:actionBarStyle">@style/theme_action_bar</item>
        <item name="actionBarStyle">@style/theme_action_bar</item>
        <item name="android:actionBarWidgetTheme">@style/theme_action_bar_widget</item>
        <item name="drawerArrowStyle">@style/theme_drawer_arrow</item>
        <item name="android:actionBarTheme" tools:targetApi="21">@style/theme_drawer_bar</item>
        <item name="actionBarTheme">@style/theme_drawer_bar</item>
        <item name="android:actionOverflowMenuStyle" tools:targetApi="21">
            @style/theme_overflow_menu
        </item>
        <item name="actionOverflowMenuStyle">@style/theme_overflow_menu</item>
        <item name="android:dropDownListViewStyle">@style/theme_list_drop_down</item>
    </style>

    <style name="theme_overflow_menu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:overlapAnchor" tools:targetApi="21">false</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>

    <style name="theme_list_drop_down" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/theme_drop_down_divider_bg</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="theme_action_bar" parent="Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/theme_action_bar_title</item>
        <item name="titleTextStyle">@style/theme_action_bar_title</item>
        <item name="android:background">@drawable/toolbar_bg</item>
        <item name="background">@drawable/toolbar_bg</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:contentInsetStart" tools:targetApi="21">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:contentInsetEnd" tools:targetApi="21">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="android:homeAsUpIndicator">@mipmap/ic_bar_back</item>
        <item name="homeAsUpIndicator">@mipmap/ic_bar_back</item>
        <item name="android:elevation" tools:targetApi="21">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="theme_action_bar_widget">
        <item name="colorAccent">@color/action_bar_control_accent</item>
    </style>

    <style name="theme_action_bar_title">
        <item name="android:textColor">@color/action_bar_text</item>
        <item name="android:top">-10dp</item>
        <item name="android:background">#dd0099</item>
    </style>

    <style name="theme_drawer_bar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/action_bar_text</item>
    </style>

    <style name="theme_drawer_arrow" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/action_bar_text</item>
    </style>

    <style name="theme_reversed" parent="theme_base">
        <item name="colorAccent">@color/control_reversed_normal</item>
        <item name="android:colorControlNormal" tools:targetApi="21">
            @color/control_reversed_normal
        </item>
        <item name="colorControlNormal">@color/control_reversed_normal</item>
        <item name="android:colorControlHighlight" tools:targetApi="21">
            @color/control_reversed_highlight
        </item>
        <item name="colorControlHighlight">@color/control_reversed_highlight</item>
        <item name="android:colorControlActivated" tools:targetApi="21">
            @color/control_reversed_activated
        </item>
        <item name="colorControlActivated">@color/control_reversed_activated</item>
    </style>

    <style name="theme_fullscreen" parent="theme_reversed">
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="theme_default" parent="theme_base">
        <item name="android:windowActionBar">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowNoTitle">false</item>
        <item name="windowNoTitle">false</item>
    </style>

</resources>
