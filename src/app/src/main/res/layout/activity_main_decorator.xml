<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_decorator_root"
    style="@style/main_decorator_root">

    <LinearLayout
        android:id="@+id/main_drawer_placeholder"
        style="@style/main_drawer_placeholder" />

    <LinearLayout style="@style/main_content">

        <ir.webplex.android.automation.ui.CustomTextView style="@style/main_welcome" />

        <ir.webplex.android.automation.ui.CustomTextView
            android:id="@+id/main_tips_submit_receipt"
            style="@style/main_tips_submit_receipt" />
    </LinearLayout>

    <ListView
        android:id="@+id/main_drawer"
        style="@style/main_drawer" />
</android.support.v4.widget.DrawerLayout>